{% extends 'base.html.twig' %}

{% block body %}

<h3 class='mt-3 ml-3'>New Question: </h3>

<form class='p-3' action="{{ path('app_question_postQuestion') }}" method="POST">
    <div class="form-group">
        <label for="question-title-input" class="form-label">Question Title</label>
        <input type="text" class="form-control" name="question-title" id="question-title-input" required>
    </div>
    <div class="form-group">
        <label for="question-input" class="form-label">Question Text</label>
        <input type="text" class="form-control" name="question-text" id="question-input" required>
    </div>
    <div class="form-group">
        <label for="asked-by-input" class="form-label">Asked by</label>
        <input type="text" class="form-control" name="question-asked-by" id="asked-by-input" required>
    </div>
    <div class="form-group">
        <label for="slug-input" class="form-label">Slug</label>
        <input type="text" class="form-control" name="question-slug" id="slug-input" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>



{% endblock %}